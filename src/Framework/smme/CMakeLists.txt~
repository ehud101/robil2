cmake_minimum_required(VERSION 2.8.3)
project(smme)

find_package(catkin REQUIRED COMPONENTS
  robil2_msgs roscpp
)

find_package(Boost REQUIRED COMPONENTS system)



###########
## Build ##
###########

include_directories(
  ${catkin_INCLUDE_DIRS}
  ${Boost_INCLUDE_DIRS}
)

## Declare a cpp library

add_library(rosComm STATIC
  src/RosComm.cpp
)
add_library(compMain STATIC
  src/ComponentMain.cpp
)

target_link_libraries(rosComm
   ${catkin_LIBRARIES} compMain ${Boost_LIBRARIES}
)

target_link_libraries(compMain
 ${catkin_LIBRARIES} rosComm ${Boost_LIBRARIES}
)

